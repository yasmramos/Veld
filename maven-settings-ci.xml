<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">
    
    <localRepository>/home/runner/.m2/repository</localRepository>
    
    <mirrors>
        <mirror>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        
        <mirror>
            <id>spring-releases</id>
            <name>Spring Releases</name>
            <url>https://repo.spring.io/release/</url>
            <mirrorOf>spring-releases</mirrorOf>
        </mirror>
        
        <mirror>
            <id>github-packages</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/yasmramos/*</url>
            <mirrorOf>github-packages</mirrorOf>
        </mirror>
    </mirrors>
    
    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            
            <properties>
                <maven.compiler.source>11</maven.compiler.source>
                <maven.compiler.target>11</maven.compiler.target>
                <maven.compiler.release>11</maven.compiler.release>
                <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
                <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
                <maven.compiler.compilerVersion>11</maven.compiler.compilerVersion>
                <maven.compiler.fork>true</maven.compiler.fork>
                <maven.compiler.verbose>true</maven.compiler.verbose>
            </properties>
        </profile>
        
        <profile>
            <id>offline-dev</id>
            <properties>
                <maven.offline>true</maven.offline>
            </properties>
        </profile>
        
        <profile>
            <id>ci</id>
            <properties>
                <maven.test.failure.ignore>true</maven.test.failure.ignore>
                <jacoco.skip>true</jacoco.skip>
                <maven.wagon.http.ssl.insecure>true</maven.wagon.http.ssl.insecure>
                <maven.wagon.http.ssl.allowall>true</maven.wagon.http.ssl.allowall>
            </properties>
        </profile>
    </profiles>
    
    <servers>
        <server>
            <id>github-packages</id>
            <username>${env.GITHUB_ACTOR}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
        
        <server>
            <id>ossrh</id>
            <username>${env.OSSRH_USERNAME}</username>
            <password>${env.OSSRH_PASSWORD}</password>
        </server>
    </servers>
    
    <activeProfiles>
        <activeProfile>default</activeProfile>
        <activeProfile>ci</activeProfile>
    </activeProfiles>
    
</settings>