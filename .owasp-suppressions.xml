<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!--
    OWASP Dependency-Check Suppressions File
    Use this file to suppress false positives that cannot be fixed immediately.
    Each suppression should include a comment explaining why it's a false positive.
    -->

    <!-- Suppress false positives for test-only dependencies -->
    <suppress>
        <notes>
            These vulnerabilities are in test dependencies only and do not affect production code.
        </notes>
        <packageUrl regex="true">.*junit.*</packageUrl>
        <cve>CVE-.*</cve>
    </suppress>

    <!-- Suppress false positives for test-only dependencies (Mockito) -->
    <suppress>
        <notes>
            These vulnerabilities are in Mockito test dependencies only.
        </notes>
        <packageUrl regex="true">.*mockito-core.*</packageUrl>
        <cve>CVE-.*</cve>
    </suppress>

    <!-- Suppress known false positives for ByteBuddy in test scope -->
    <suppress>
        <notes>
            ByteBuddy vulnerabilities are typically addressed in newer versions that may not be
            compatible with the current Java version. The agent is used only for testing.
        </notes>
        <packageUrl regex="true">.*net.bytebuddy:byte-buddy-agent.*</packageUrl>
        <cve>CVE-2021-22144</cve>
    </suppress>

    <!-- Suppress false positives for benchmark dependencies (JMH) -->
    <suppress>
        <notes>
            JMH benchmarks are not shipped in production and their dependencies are isolated.
        </notes>
        <packageUrl regex="true">.*org.openjdk.jmh.*</packageUrl>
        <cve>CVE-.*</cve>
    </suppress>

    <!-- Suppress Spring framework vulnerabilities in Spring Boot starter (managed) -->
    <suppress>
        <notes>
            Spring Boot BOM manages these dependencies. The version in use has been
            vetted by the Spring team. Only suppress if using Spring's supported versions.
        </notes>
        <packageUrl regex="true">.*org.springframework:.*</packageUrl>
        <cve>CVE-2024-22243</cve>
    </suppress>

    <!-- Suppress Guava vulnerabilities in test scope -->
    <suppress>
        <notes>
            Guava is a transitive dependency used in tests. The vulnerabilities are
            related to deprecated APIs not used in this project.
        </notes>
        <packageUrl regex="true">.*com.google.guava:guava.*</packageUrl>
        <cve>CVE-2023-2976</cve>
    </suppress>

    <!-- Suppress Velocity vulnerabilities (example module only, not production) -->
    <suppress>
        <notes>
            Velocity 0.8.0 is only used in veld-example module for demonstration purposes
            and is not part of the core framework. Consider migrating to a newer template engine.
        </notes>
        <packageUrl regex="true">.*org.apache.velocity:velocity.*</packageUrl>
        <cve>CVE-2020-13936</cve>
    </suppress>
</suppressions>
